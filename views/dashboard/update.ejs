<div class="container">
    <h1 class="text-center m-5">add your recipe</h1>
    <form action="/dashboard/update/<%- recipe._id %>?_method=PUT" class="form w-50 m-auto" method="post" enctype="multipart/form-data">
        <div class="name form-group my-3">
            <label for="name" class="">name of recipe : </label>
            <input type="text" class="form-control" name="name" id="name" value="<%- recipe.name %>" placeholder="add the name...">
        </div>
        <div class="descripiton form-group my-3">
            <label for="description" class="">description of recipe : </label>
            <textarea class="form-control" name="description" id="description"  placeholder="add the description..."><%- recipe.description %></textarea>
        </div>
        <div class="time form-group my-3">
            <label for="description" class="">time to finish </label>
            <div class="d-flex">
                <input type="number" value="<%- recipe.mins %>" min="0" max="60" class="form-control" name="mins" id="mins" placeholder="add the mins...">
                <input type="number" value="<%- recipe.secs %>" min="0" max="60" class="form-control" name="secs" id="secs" placeholder="add the secs...">
            </div>
        </div>
        <div class="time form-group my-3 d-flex">
            <label for="description" class="">hot or iced </label>
            <div>
                <input type="radio" <%- recipe.hotOrIced === "hot" ? "checked":"" %> min="0" max="60" class="form-check-input" name="hotOrIced" value="hot" id="hot">
                <label for="hot">hot</label>
                <input type="radio" <%- recipe.hotOrIced === "iced" ? "checked":"" %> min="0" max="60" class="form-check-input" name="hotOrIced" value="iced" id="iced">
                <label for="iced">iced</label>
            </div>
        </div>
        <div class="descripiton form-group my-3">
            <label for="Ingredients" class="">Ingredients of recipe : </label>
            <div class="ingredientsList">
                <% recipe.ingredients.forEach((item)=>{%>
                    <div class="ingredientsDiv mb-1">
                        <input type="text" class="form-control" value="<%- item %>" name="ingredients" id="ingredients" placeholder="add the Ingredients...">
                    </div>
            <%  }) %>
            </div>
        </div>
        <div class="form-group my-3">
            <button type="button" class="btn btn-outline-primary" id="addIngredients">+ Ingredients</button>
        </div>

        <div class="form-group my-3">
            <label for="category">Select category</label>
            <select class="form-select form-control" name="category" id="category">
                <option hidden disabled>select category</option>
                <option value="fruity" <%- recipe.category[0] === "fruity" ? "selected":"" %> >fruity</option>
                <option value="classic" <%- recipe.category[0] === "classic" ? "selected":"" %>>classic</option>
                <option value="soury" <%- recipe.category[0] === "soury" ? "selected":"" %>>soury</option>                
            </select>
        </div>
        <div class="image form-group my-3">
            <label for="image" class="">Product Image</label>
            <% if (recipe.image) { %>
                <div class="mb-2">
                    <label>Current Image:</label>
                    <img src="/uploads/<%= recipe.image %>" alt="Current Recipe Image" class="img-fluid" style="max-width: 200px; border: 1px solid #ddd; border-radius: 5px;">
                </div>
            <% } %>
            <input type="file" class="form-control" name="image" id="image" accept="image/*">
        </div>

        <div class="form-group my-3">
            <button type="submit" class="btn btn-primary">update Recipe</button>
        </div>
    </form>
</div>