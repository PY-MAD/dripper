<div class="container">
    <div class="d-flex justify-content-between">
        <div class="ShowRecipeimage w-100" style="background-image:url('/uploads/<%- recipe.image %>')">
            <div class="ShowRecipeTitle">
                <%- recipe.name %>
            </div>
            <div class="ShowRecipeCategory">
                <%- recipe.category %>
            </div>
        </div>
        <div class="cols w-25"></div>
        <div class="cols w-100">
            <br>
            <br>
            <div class="ShowRecipeDecs text-end">
                <%- recipe.description %>
            </div>
            <br>
            <br>
            <br>
            <ul class="list-group list-group-flush">
                <li class="list-group-item mb-3"><i class="bi bi-alarm"></i> : <%- recipe.mins.length === 1 ? "0"+recipe.mins : recipe.mins%> : <%- recipe.secs %></li>
                <li class="list-group-item mb-3"><img src="/icons/temperatures.png" width="25px" alt=""> : <img src="/icons/<%- recipe.hotOrIced === "hot" ? "air.png":"snowflake.png" %>" width="25px" alt=""> <%- recipe.hotOrIced %></li>
                <% recipe.ingredients.forEach((item,index)=>{ %>
                    <li class="list-group-item mb-3"><img src="/icons/pour-over.png" width="25px" alt=""> <%- ++index %> : <%- item %> </li>
                <% }) %>
            </ul>
            <br>
            <br>
            <br>
            <div class="createdBy">
                By <%- recipe.username %>
            </div>
        </div>
    </div>

</div>