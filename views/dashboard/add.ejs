<div class="container">
    <h1 class="text-center m-5">add your recipe</h1>
    <form action="/dashboard/addRecipe" class="form w-50 m-auto" method="post" enctype="multipart/form-data">
        <% if(error){ %>
            <div class="alert alert-danger" role="alert">
                <%- error %>
                <% error = ""; %>
            </div>
        <% } %>
        <div class="name form-group my-3">
            <label for="name" class="">name of recipe : </label>
            <input type="text" class="form-control" name="name" id="name" placeholder="add the name...">
        </div>
        <div class="descripiton form-group my-3">
            <label for="description" class="">description of recipe : </label>
            <textarea class="form-control" name="description" id="description" placeholder="add the description..."></textarea>
        </div>
        <div class="descripiton form-group my-3">
            <label for="description" class="">temperature : </label>
            <input type="number" min="0" max="100" class="form-control" name="temperature" id="temperature" placeholder="add the temperature...">
        </div>
        <div class="descripiton form-group my-3">
            <label for="description" class="">weight of beans : </label>
            <input type="number" min="0" class="form-control" name="weight" id="weight" placeholder="add the weight...">
        </div>
        <div class="time form-group my-3">
            <label for="description" class="">time to finish </label>
            <div class="d-flex">
                <input type="number" min="0" max="60" class="form-control" name="mins" id="mins" placeholder="add the mins...">
                <input type="number" min="0" max="60" class="form-control" name="secs" id="secs" placeholder="add the secs...">
            </div>
        </div>
        <div class="time form-group my-3 d-flex">
            <label for="description" class="">hot or iced </label>
            <div>
                <input type="radio" min="0" max="60" class="form-check-input" name="hotOrIced" value="hot" id="hot">
                <label for="hot">hot</label>
                <input type="radio" min="0" max="60" class="form-check-input" name="hotOrIced" value="iced" id="iced">
                <label for="iced">iced</label>
            </div>
        </div>
        <div class="descripiton form-group my-3">
            <label for="Ingredients" class="">Ingredients of recipe : </label>
            <div class="ingredientsList">
                <div class="ingredientsDiv mb-1">
                    <input type="text" class="form-control" name="ingredients" id="ingredients" placeholder="add the Ingredients...">
                </div>
            </div>
        </div>
        <div class="form-group my-3">
            <button type="button" class="btn btn-outline-primary" id="addIngredients">+ Ingredients</button>
        </div>

        <div class="form-group my-3">
            <label for="category">Select category</label>
            <select class="form-select form-control" name="category" id="category">
                <option hidden selected disabled>select category</option>
                <option value="fruity">fruity</option>
                <option value="classic">classic</option>
                <option value="soury">soury</option>                
            </select>
        </div>
        <div class="image form-group my-3">
            <label for="image" class="">Product image</label>
            <input type="file" class="form-control" name="image" id="image" accept="image/*">
        </div>

        <div class="form-group my-3">
            <button type="submit" class="btn btn-primary">submit Recipe</button>
        </div>
    </form>
</div>